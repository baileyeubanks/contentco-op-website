{
  "name": "contentco-op-monorepo",
  "version": "0.2.0",
  "private": true,
  "packageManager": "npm@11.9.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:home": "npm run dev -w @contentco-op/home",
    "dev:coedit": "npm run dev -w @contentco-op/coedit",
    "dev:coscript": "npm run dev -w @contentco-op/coscript",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.19.16",
    "eslint": "^9.39.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.3"
  }
}
